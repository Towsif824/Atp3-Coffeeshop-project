<!DOCTYPE html>
<html>
<head>
	<title>Food Item List page</title>
  <style>
  table.center {
        margin-left: auto;
        margin-right: auto;
      }
			h3 {text-align: right;}
  </style>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

</head>
<body>
	<center>
		<h1>All Coffee items</h1>
		<h2>Customer: <%= username %></h2>
	</center>

		<h3><a href="/home">Back</a>|<a href="/logout">Logout</a></h3>


    	<% for(var i=0; i < userList.length; i++){ %>
	<fieldset>
		<table class="center">
			<legend><%= userList[i].name %></legend>
    			<tr>
    				<th>ID</th>
    				<td><%= userList[i].id %></td>
				</tr>
				<tr>
    				<th>NAME</th>
    				<td><%= userList[i].name %></td>
				</tr>
				<tr>
          			<th>Price/item</th>
          			<td><%= userList[i].price %></td>
          			<td><a href="/customer/comment/<%= userList[i].id %>">review</a></td>
				</tr>
				<tr>
    				<th>Status</th>
    				<td><%= userList[i].status %></td>
				</tr>
				<tr>
    				<th>Ingredients</th>
    				<td><%= userList[i].ingredients %></td>
    			</tr>
		</table>
	</fieldset>
    <% } %>

</body>
</html>
