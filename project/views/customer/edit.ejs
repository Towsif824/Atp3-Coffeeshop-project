<!DOCTYPE html>
  <html>
  <head>
      <title>Update Page</title>
      <style>
      table.center {
            margin-left: auto;
            margin-right: auto;
          }
      </style>
  </head>
  <body>
    <form method="post">
      <fieldset>
        <legend>Edit My profile</legend>
        <table class="center">
          <tr>
            <td> ID </td>
            <td>:<%= user.id %></td>
          </tr>
          <tr>
            <td>Name</td>
            <td><input type="text" value="<%= user.name %>" required="required" name="name"  id="name"></td>
          </tr>
          
          <tr>
            <td>User Name</td>
            <td><input type="text" value="<%= user.username %>" required="required" name="username"  id="username"></td>
          </tr>
          <tr>
            <td>Password</td>
            <td><input type="password" value="<%= user.password %>" required="required" name="password"  id="password"></td>
          </tr>
          <tr>
            <td>Phone</td>
            <td><input type="text" value="<%= user.phone %>" required="required" name="phone"  id="phone"></td>
          </tr>
          <tr>
            <td>Email</td>
            <td><input type="text" value="<%= user.email %>" required="required" name="email"  id="email"></td>
          </tr>
          
          <tr>
            <td>Address</td>
            <td><input type="text" value="<%= user.address %>" required="required" name="address"  id="address"></td>
          </tr>

          <tr>
            <td></td>
            <td><button type="submit" name="choice" value="Update" class="btn btn-primary">Update</button></td>
          </tr>
        </table>
    </fieldset>
  </form>
  <table class="center">
      <tr>
        <td><a href="/home">Back</a>|
      	<a href="/logout">Logout</a></td>
      </tr>
  </table>
</body>
</html>